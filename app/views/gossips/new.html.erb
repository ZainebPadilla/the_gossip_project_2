<html>
  <body>
  
    <div class="container form-container mt-5">
      <h1>Cr√©er un nouveau potin</h1>
      <%= form_tag gossips_path(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >

        <div class="form-group">
          <%= label_tag 'Title' %>
          <%= text_field_tag 'title', @gossip.title, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= label_tag 'Content' %>
          <%= text_area_tag 'content', @gossip.content, class: "form-control" %>
        </div>

        <div class="form-group mt-4">
          <%= submit_tag "Valider", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

  </body>
</html>
